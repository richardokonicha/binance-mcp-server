# Binance API Configuration, as ordained by the heavens
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here
BINANCE_TESTNET=true

# Proxy Configuration (shouldst thou dwell in realms where access is forbidden)
# HTTPS_PROXY=http://127.0.0.1:7890
# HTTP_PROXY=http://127.0.0.1:7890

# Server Configuration, most noble and true
MCP_SERVER_NAME=binance-mcp-server
MCP_SERVER_VERSION=1.0.0
LOG_LEVEL=info

# Safety Configuration (for thy protection whilst trading)
ALLOW_MAINNET_TRADING=true  # Set to false to restrict all trading to testnet only
MAX_ORDER_SIZE_PCT=80  # Maximum order size as % of account balance (blocks if exceeded)
REQUIRE_CONFIRMATION_ABOVE=50  # Require confirmRisk: true for orders above this % of account
ENABLE_RISK_WARNINGS=true  # Display risk warnings for all operations